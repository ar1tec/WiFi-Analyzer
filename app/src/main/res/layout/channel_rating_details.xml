<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingTop="@dimen/list_view_item_horizontal_spacer">

    <RatingBar
        android:id="@+id/channelRating"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingRight="@dimen/list_view_item_horizontal_spacer"
        android:stepSize="1.0" />

    <TextView
        android:id="@+id/channelNumber"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.75"
        android:paddingLeft="@dimen/list_view_item_horizontal_spacer"
        android:paddingRight="@dimen/list_view_item_horizontal_spacer"
        android:textColor="@color/channel_number"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/accessPointCount"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.75"
        android:paddingLeft="@dimen/list_view_item_horizontal_spacer"
        android:textColor="@color/connected"
        android:textStyle="bold"/>

</LinearLayout>
